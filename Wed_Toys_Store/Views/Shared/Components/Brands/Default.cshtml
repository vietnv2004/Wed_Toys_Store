@model IEnumerable<Wed_Toys_Store.Models.Brand>

@if (Model != null && Model.Any())
{
    <div class="brands-dropdown-menu dropdown-menu shadow rounded-3 border-0 p-4" style="min-width: 800px; max-width: 1000px;">
        <div class="row g-3">
            @foreach (var brand in Model)
            {
                <div class="col-2">
                    <a asp-controller="Products" asp-action="Index" asp-route-brand="@brand.Name" class="d-flex align-items-center justify-content-center p-3 border rounded-3 text-decoration-none bg-white brand-item">
                        <img src="@brand.LogoUrl" alt="@brand.Name" class="img-fluid" style="max-height: 60px; object-fit: contain;" />
                    </a>
                </div>
            }
        </div>
        <div class="text-center mt-3 pb-3">
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-sm">View All Brands</a>
        </div>
    </div>
}












