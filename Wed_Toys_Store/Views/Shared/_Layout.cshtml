                                        <li class="nav-item">
                                            <a class="nav-link fw-bold text-uppercase px-3 text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                                <i class="bi bi-house-door me-1"></i> Home
                                            </a>
                                        </li>
                                        <li class="nav-item dropdown position-relative" onmouseenter="showCategoriesDropdown()" onmouseleave="hideCategoriesDropdown()">
                                            <a class="nav-link fw-bold text-uppercase dropdown-toggle px-3 text-dark" asp-controller="Products" asp-action="Index" id="categoriesDropdown" role="button" aria-expanded="false">
                                                <i class="bi bi-grid me-1"></i> Product Categories
