                                            @await Component.InvokeAsync("Brands")
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-warning fw-bold text-uppercase px-3" asp-controller="DiscountCodes" asp-action="Public">
                                                <i class="bi bi-percent me-1"></i> Discount
