    <script>
        // Update cart badge on page load
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/Cart/GetCartCount')
                .then(response => response.json())
                .then(data => {
                    const cartBadge = document.querySelector('.cart-badge-count');
                    if (cartBadge && data.count !== undefined) {
                        cartBadge.textContent = data.count;
                        cartBadge.style.display = (data.count > 0) ? 'flex' : 'none';
                    }
                })
                .catch(error => console.error('Error loading cart count:', error));
        });
    </script>
    <script>
        let dropdownTimeout;

        // Show dropdown on hover
        function showCategoriesDropdown() {
            // Clear any pending hide timeout
            clearTimeout(dropdownTimeout);
            
            const dropdownMenu = document.querySelector('#categoriesMenuList');
            const dropdownToggle = document.querySelector('#categoriesDropdown');
            
            if (dropdownMenu && dropdownToggle) {
                dropdownMenu.classList.add('show');
                dropdownToggle.setAttribute('aria-expanded', 'true');
            }
        }

        // Hide dropdown when mouse leaves (with delay to allow moving to menu)
        function hideCategoriesDropdown(event) {
            // Check if mouse is moving to dropdown menu
            const dropdownMenu = document.querySelector('#categoriesMenuList');
            const relatedTarget = event ? event.relatedTarget : null;
            
            // If mouse is moving to dropdown menu, don't hide
            if (relatedTarget && dropdownMenu && dropdownMenu.contains(relatedTarget)) {
                return;
            }
            
            // Add delay to allow smooth transition
            dropdownTimeout = setTimeout(function() {
                const menu = document.querySelector('#categoriesMenuList');
                const toggle = document.querySelector('#categoriesDropdown');
                
                if (menu && toggle) {
                    menu.classList.remove('show');
                    toggle.setAttribute('aria-expanded', 'false');
                }
            }, 150); // 150ms delay for smooth transition
        }

        // Brands Dropdown Functions
        let brandsDropdownTimeout;

        function showBrandsDropdown() {
            clearTimeout(brandsDropdownTimeout);
            
            const brandsMenu = document.querySelector('.brands-dropdown-menu');
            const brandsToggle = document.querySelector('#brandsDropdown');
            
            if (brandsMenu && brandsToggle) {
                brandsMenu.classList.add('show');
                brandsToggle.setAttribute('aria-expanded', 'true');
            }
        }

        function hideBrandsDropdown(event) {
            const brandsMenu = document.querySelector('.brands-dropdown-menu');
            const relatedTarget = event ? event.relatedTarget : null;
            
            if (relatedTarget && brandsMenu && brandsMenu.contains(relatedTarget)) {
                return;
            }
            
            brandsDropdownTimeout = setTimeout(function() {
                const menu = document.querySelector('.brands-dropdown-menu');
                const toggle = document.querySelector('#brandsDropdown');
                
                if (menu && toggle) {
                    menu.classList.remove('show');
                    toggle.setAttribute('aria-expanded', 'false');
                }
            }, 150);
        }

        // Management Dropdown Functions
        let managementDropdownTimeout;

        function showManagementDropdown() {
            clearTimeout(managementDropdownTimeout);
            
            const managementMenu = document.querySelector('#managementMenu');
            const managementToggle = document.querySelector('#managementDropdown');
            
            if (managementMenu && managementToggle) {
                managementMenu.classList.add('show');
                managementToggle.setAttribute('aria-expanded', 'true');
            }
        }

        function hideManagementDropdown(event) {
            const managementMenu = document.querySelector('#managementMenu');
            const relatedTarget = event ? event.relatedTarget : null;
            
            if (relatedTarget && managementMenu && managementMenu.contains(relatedTarget)) {
                return;
            }
            
            managementDropdownTimeout = setTimeout(function() {
                const menu = document.querySelector('#managementMenu');
                const toggle = document.querySelector('#managementDropdown');
                
                if (menu && toggle) {
                    menu.classList.remove('show');
                    toggle.setAttribute('aria-expanded', 'false');
                }
            }, 150);
        }

        // User Account Dropdown Functions
        let userAccountDropdownTimeout;

        function showUserAccountDropdown() {
            clearTimeout(userAccountDropdownTimeout);
            
            const userMenu = document.querySelector('#userAccountMenu');
            const userToggle = document.querySelector('#userAccountToggle');
            
            if (userMenu && userToggle) {
                userMenu.classList.add('show');
            }
        }

        function hideUserAccountDropdown(event) {
            const userMenu = document.querySelector('#userAccountMenu');
            const relatedTarget = event ? event.relatedTarget : null;
            
            if (relatedTarget && userMenu && userMenu.contains(relatedTarget)) {
                return;
            }
            
            userAccountDropdownTimeout = setTimeout(function() {
                const menu = document.querySelector('#userAccountMenu');
                
                if (menu) {
                    menu.classList.remove('show');
                }
            }, 150);
        }

        // Also handle mouseenter on dropdown menu itself
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownMenu = document.querySelector('#categoriesMenuList');
            if (dropdownMenu) {
                dropdownMenu.addEventListener('mouseenter', function() {
                    clearTimeout(dropdownTimeout);
                    showCategoriesDropdown();
                });
            }

            const brandsMenu = document.querySelector('.brands-dropdown-menu');
            if (brandsMenu) {
                brandsMenu.addEventListener('mouseenter', function() {
                    clearTimeout(brandsDropdownTimeout);
                    showBrandsDropdown();
                });
            }

            const userAccountMenu = document.querySelector('#userAccountMenu');
            if (userAccountMenu) {
                userAccountMenu.addEventListener('mouseenter', function() {
                    clearTimeout(userAccountDropdownTimeout);
                    showUserAccountDropdown();
                });
            }

            // Scroll to Top Button
            const scrollToTopBtn = document.getElementById('scrollToTop');
            
            // Show/hide scroll to top button
            window.addEventListener('scroll', function() {
                if (window.scrollY > 300 || document.documentElement.scrollTop > 300) {
                    scrollToTopBtn.classList.add('show');
                } else {
                    scrollToTopBtn.classList.remove('show');
                }
            });

            // Scroll to top functionality
            scrollToTopBtn.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
