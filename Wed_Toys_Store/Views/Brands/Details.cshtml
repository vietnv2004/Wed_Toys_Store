@model Wed_Toys_Store.Models.Brand

@{
    ViewData["Title"] = "Brand Details";
    Layout = null; // Tạm thời giữ null theo code gốc, nhưng nên dùng _LayoutAdmin trong tương lai
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        /* CSS Riêng cho Layout Admin (Sidebar) */
        :root {
            --admin-sidebar-width: 250px;
            --admin-primary: #4169E1;
            --admin-primary-hover: #3556C7;
        }

        body {
            background-color: #f8f9fa; /* Bootstrap Gray-100 */
        }

        /* Sidebar Styling */
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: var(--admin-sidebar-width);
            background-color: var(--admin-primary);
            color: white;
            z-index: 1000;
            overflow-y: auto;
        }

        .admin-main {
            margin-left: var(--admin-sidebar-width);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .admin-content {
            padding: 2rem;
            flex: 1;
        }

        /* Custom style cho khung ảnh nếu cần kích thước cố định */
        .img-preview-container {
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
        }

            .img-preview-container img {
                max-height: 100%;
                max-width: 100%;
                object-fit: contain;
            }
    </style>
</head>
<body>
    @await Html.PartialAsync("_AdminSidebar")

    <div class="admin-main">
        <div class="admin-content container-fluid">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0 text-primary">
                    <i class="bi bi-info-circle-fill me-2"></i>Chi tiết Thương hiệu
                </h2>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Index", "Brands")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Trở về
                    </a>
                    <a href="@Url.Action("Edit", "Brands", new { id = Model.Id })" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                    </a>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0">Thông tin: <span class="text-primary fw-bold">@Model.Name</span></h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-8">
                            <dl class="row mb-0">
                                <dt class="col-sm-3 text-muted">Mã ID</dt>
                                <dd class="col-sm-9 fw-bold">@Model.Id</dd>

                                <dt class="col-sm-3 text-muted">Tên thương hiệu</dt>
                                <dd class="col-sm-9 fs-5 text-dark">@Model.Name</dd>

                                <dt class="col-sm-3 text-muted">Đường dẫn Logo</dt>
                                <dd class="col-sm-9 text-break">
                                    <a href="@Model.LogoUrl" target="_blank" class="text-decoration-none">
                                        <i class="bi bi-link-45deg"></i> @Model.LogoUrl
                                    </a>
                                </dd>

                                <dt class="col-sm-3 text-muted">Thứ tự hiển thị</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-secondary rounded-pill px-3">@Model.DisplayOrder</span>
                                </dd>

                                <dt class="col-sm-3 text-muted">Trạng thái</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success bg-opacity-75"><i class="bi bi-check-circle me-1"></i>Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-75"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-lg-4">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                                    <h6 class="text-muted mb-3 text-uppercase small fw-bold">Logo Preview</h6>
                                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                                    {
                                        <div class="img-preview-container p-3 rounded bg-white shadow-sm border w-100">
                                            <img src="@Model.LogoUrl" alt="@Model.Name" class="img-fluid">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="img-preview-container rounded bg-white border w-100 text-muted">
                                            <div>
                                                <i class="bi bi-image display-4 d-block mb-2"></i>
                                                <span>No Image</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>