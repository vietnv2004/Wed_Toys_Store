@model Wed_Toys_Store.Models.Brand

@{
    ViewData["Title"] = "Create Brand";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .admin-main {
            margin-left: 250px;
        }

        .brand-logo-preview {
            width: 200px;
            height: 120px;
            object-fit: contain;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <div class="admin-content">
            <div class="card shadow-sm">
                <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Create New Brand
                    </h2>
                    <a href="@Url.Action("Index", "Brands")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">Brand Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter brand name" required>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LogoUrl" class="form-label fw-semibold">Logo URL <span class="text-danger">*</span></label>
                                <input asp-for="LogoUrl" class="form-control form-control-lg" placeholder="https://example.com/logo.png" required id="logoUrlInput">
                                <small class="form-text text-muted">Enter the full URL of the brand logo</small>
                                <span asp-validation-for="LogoUrl" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="DisplayOrder" class="form-label fw-semibold">Display Order</label>
                                    <input asp-for="DisplayOrder" class="form-control form-control-lg" type="number" value="0" min="0">
                                    <small class="form-text text-muted">Lower number displays first</small>
                                    <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Status</label>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked role="switch">
                                        <label class="form-check-label ms-2" asp-for="IsActive">
                                            Active
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-3 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Create Brand
                                </button>
                                <a href="@Url.Action("Index", "Brands")" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Logo Preview</h6>
                                    <img id="logoPreview" src="" alt="Logo Preview" class="brand-logo-preview d-none mb-3">
                                    <p class="text-muted small mb-0" id="previewText">Enter logo URL to see preview</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('logoUrlInput').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('logoPreview');
            const previewText = document.getElementById('previewText');
            
            if (url && url.startsWith('http')) {
                preview.src = url;
                preview.classList.remove('d-none');
                previewText.classList.add('d-none');
            } else {
                preview.classList.add('d-none');
                previewText.classList.remove('d-none');
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>


