@model Wed_Toys_Store.Models.Banner

@{
    ViewData["Title"] = "Banner Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- CSS BẮT BUỘC (Bootstrap không thay thế được) -->
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            width: 250px;
            height: 100vh;
            background-color: var(--admin-sidebar-bg);
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .banner-preview {
            max-width: 100%;
            max-height: 400px;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- MAIN -->
    <div class="admin-main">
        <div class="p-4">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <!-- HEADER -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0 fw-bold">
                            <i class="bi bi-eye me-2"></i>Banner Details
                        </h2>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit"
                               asp-route-id="@Model.Id"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                            <a asp-action="Index"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>

                    <!-- CONTENT -->
                    <div class="row">

                        <!-- INFO -->
                        <div class="col-md-8">

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">ID</div>
                                <div class="fs-5">@Model.Id</div>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Title</div>
                                <div class="fs-5">@Model.Title</div>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Description</div>
                                <div>
                                    @(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)
                                </div>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Image URL</div>
                                <div>
                                    <a href="@Model.ImageUrl"
                                       target="_blank"
                                       class="text-primary text-decoration-none">
                                        @Model.ImageUrl
                                        <i class="bi bi-box-arrow-up-right ms-1"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Link URL</div>
                                <div>
                                    @if (!string.IsNullOrEmpty(Model.LinkUrl))
                                    {
                                        <a href="@Model.LinkUrl"
                                           target="_blank"
                                           class="text-primary text-decoration-none">
                                            @Model.LinkUrl
                                            <i class="bi bi-box-arrow-up-right ms-1"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Display Order</div>
                                <span class="badge bg-secondary fs-6">
                                    @Model.DisplayOrder
                                </span>
                            </div>

                            <div class="py-3 border-bottom">
                                <div class="text-muted small fw-semibold">Status</div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </div>

                            <div class="py-3">
                                <div class="text-muted small fw-semibold">Created At</div>
                                <div>
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")
                                </div>
                            </div>

                        </div>

                        <!-- PREVIEW -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-light fw-semibold">
                                    Banner Preview
                                </div>
                                <div class="card-body text-center">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Model.ImageUrl"
                                             alt="@Model.Title"
                                             class="banner-preview w-100 rounded border" />
                                    }
                                    else
                                    {
                                        <div class="banner-preview bg-light rounded border
                                                        d-flex align-items-center justify-content-center"
                                             style="height:200px;">
                                            <i class="bi bi-image text-muted display-1"></i>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
