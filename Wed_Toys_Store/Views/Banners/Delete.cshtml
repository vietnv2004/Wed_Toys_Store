@model Wed_Toys_Store.Models.Banner

@{
    ViewData["Title"] = "Delete Banner";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- CSS BẮT BUỘC (Bootstrap không thay thế được) -->
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            width: 250px;
            height: 100vh;
            background-color: var(--admin-sidebar-bg);
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .banner-preview {
            max-width: 100%;
            max-height: 300px;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- MAIN -->
    <div class="admin-main">
        <div class="p-4">

            <div class="card shadow-sm border-danger">
                <div class="card-body p-4">

                    <!-- HEADER -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0 fw-bold text-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>Delete Banner
                        </h2>
                        <a asp-action="Index"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>

                    <!-- WARNING -->
                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>
                            Are you sure you want to delete this banner?
                        </strong>
                        <span class="ms-1">
                            This action cannot be undone.
                        </span>
                    </div>

                    <!-- CONTENT -->
                    <div class="row">
                        <div class="col-md-8">

                            <div class="mb-3">
                                <div class="text-muted small fw-semibold">ID</div>
                                <div class="fs-5">@Model.Id</div>
                            </div>

                            <div class="mb-3">
                                <div class="text-muted small fw-semibold">Title</div>
                                <div class="fs-5">@Model.Title</div>
                            </div>

                            <div class="mb-3">
                                <div class="text-muted small fw-semibold">Description</div>
                                <div>
                                    @(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="text-muted small fw-semibold">Status</div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-4">
                                    <div class="text-muted small fw-semibold mb-2">
                                        Banner Image
                                    </div>
                                    <img src="@Model.ImageUrl"
                                         alt="@Model.Title"
                                         class="banner-preview rounded border" />
                                </div>
                            }

                            <!-- ACTIONS -->
                            <form asp-action="Delete" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />

                                <div class="d-flex gap-3">
                                    <button type="submit"
                                            class="btn btn-danger btn-lg">
                                        <i class="bi bi-trash me-2"></i>Delete Banner
                                    </button>
                                    <a asp-action="Index"
                                       class="btn btn-outline-secondary btn-lg">
                                        <i class="bi bi-x-circle me-2"></i>Cancel
                                    </a>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
