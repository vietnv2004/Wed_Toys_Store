@model IEnumerable<Wed_Toys_Store.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mb-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-2 text-primary">Order History</h2>
            <p class="text-muted">View all your past orders and their details</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox text-muted display-1"></i>
                        <h4 class="mt-4 mb-3">No Orders Yet</h4>
                        <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your orders here.</p>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="accordion" id="ordersAccordion">
            @foreach (var order in Model)
            {
                var orderTotal = order.OrderItems.Sum(item => item.Quantity * item.Price);
                var collapseId = $"orderCollapse{order.Id}";
                var headerId = $"orderHeader{order.Id}";
                
                var statusBadgeClass = order.Status switch
                {
                    "Pending" => "bg-warning text-dark",
                    "Processing" => "bg-info text-white",
                    "Shipped" => "bg-primary text-white",
                    "Completed" => "bg-success text-white",
                    "Cancelled" => "bg-danger text-white",
                    _ => "bg-secondary text-white"
                };
                
                <div class="accordion-item mb-3 border rounded shadow-sm">
                    <h2 class="accordion-header" id="@headerId">
                        <button class="accordion-button collapsed" type="button" 
                                data-bs-toggle="collapse" data-bs-target="#@collapseId" 
                                aria-expanded="false" 
                                aria-controls="@collapseId">
                            <div class="d-flex flex-wrap align-items-center justify-content-between w-100 me-3 gap-3">
                                <div class="d-flex flex-wrap align-items-center gap-3">
                                    <span class="fw-bold text-primary fs-5">
                                        <i class="bi bi-receipt me-2"></i>Order #@order.Id
                                    </span>
                                    <span class="text-muted small d-flex align-items-center">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @order.OrderDate.ToString("MMM dd, yyyy 'at' HH:mm")
                                    </span>
                                    <span class="fw-bold text-danger fs-5">
                                        @orderTotal.ToString("N0")₫
                                    </span>
                                </div>
                                <span class="badge @statusBadgeClass px-3 py-2 rounded-pill">
                                    @order.Status
                                </span>
                            </div>
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" 
                         aria-labelledby="@headerId">
                        <div class="accordion-body">
                            <!-- Order Information -->
                            <div class="row g-3 mb-4 pb-3 border-bottom">
                                <div class="col-md-6 col-lg-3">
                                    <div class="d-flex flex-column">
                                        <small class="text-muted fw-bold text-uppercase mb-1">
                                            <i class="bi bi-geo-alt me-1"></i>Shipping Address
                                        </small>
                                        <span class="text-dark">@order.ShippingAddress</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="d-flex flex-column">
                                        <small class="text-muted fw-bold text-uppercase mb-1">
                                            <i class="bi bi-calendar3 me-1"></i>Order Date
                                        </small>
                                        <span class="text-dark">@order.OrderDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="d-flex flex-column">
                                        <small class="text-muted fw-bold text-uppercase mb-1">
                                            <i class="bi bi-currency-dollar me-1"></i>Total Amount
                                        </small>
                                        <span class="text-danger fw-bold fs-5">@orderTotal.ToString("N0")₫</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <div class="d-flex flex-column">
                                        <small class="text-muted fw-bold text-uppercase mb-1">
                                            <i class="bi bi-check-circle me-1"></i>Status
                                        </small>
                                        <span class="badge @statusBadgeClass px-3 py-2 rounded-pill align-self-start">
                                            @order.Status
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Order Items -->
                            <div class="mb-3">
                                <h6 class="fw-bold mb-3 d-flex align-items-center">
                                    <i class="bi bi-list-ul me-2"></i>
                                    Order Items (@order.OrderItems.Count item@(order.OrderItems.Count > 1 ? "s" : ""))
                                </h6>
                                
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="fw-bold text-uppercase small">Product</th>
                                                <th class="text-center fw-bold text-uppercase small">Quantity</th>
                                                <th class="text-end fw-bold text-uppercase small">Unit Price</th>
                                                <th class="text-end fw-bold text-uppercase small">Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in order.OrderItems)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center gap-3">
                                                            @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                                            {
                                                                <img src="@item.Product.ImageUrl" 
                                                                     alt="@item.Product.Name" 
                                                                     class="rounded border"
                                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                            }
                                                            else
                                                            {
                                                                <div class="bg-light rounded border d-flex align-items-center justify-content-center" 
                                                                     style="width: 60px; height: 60px;">
                                                                    <i class="bi bi-image text-secondary"></i>
                                                                </div>
                                                            }
                                                            <div>
                                                                @if (item.Product != null)
                                                                {
                                                                    <a asp-controller="Products" 
                                                                       asp-action="Details" 
                                                                       asp-route-id="@item.ProductId" 
                                                                       class="fw-bold text-decoration-none text-dark">
                                                                        @item.Product.Name
                                                                    </a>
                                                                }
                                                                else
                                                                {
                                                                    <span class="fw-bold text-dark">N/A</span>
                                                                }
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-secondary">@item.Quantity</span>
                                                    </td>
                                                    <td class="text-end fw-semibold">
                                                        @item.Price.ToString("N0")₫
                                                    </td>
                                                    <td class="text-end fw-bold">
                                                        @((item.Quantity * item.Price).ToString("N0"))₫
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="3" class="text-end fw-bold">
                                                    Total:
                                                </td>
                                                <td class="text-end fw-bold text-danger fs-5">
                                                    @orderTotal.ToString("N0")₫
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
