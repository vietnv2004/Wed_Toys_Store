@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid px-0">
    <div class="row g-0">
        <!-- LEFT SIDE - CONTACT INFORMATION -->
        <div class="col-lg-5 bg-light p-5 d-flex flex-column justify-content-center" style="min-height: 100vh;">
            <div class="px-4">
                <h1 class="fw-bold mb-3" style="color: #0b2b8c; font-size: 2.5rem;">How can we help you?</h1>
                <p class="text-muted mb-4" style="font-size: 1.1rem;">We are at your disposal 7 days a week!</p>
                
                <!-- Phone Number -->
                <div class="mb-4">
                    <h3 class="fw-bold mb-2" style="color: #0b2b8c; font-size: 1.8rem;">+84 28 2236 2222</h3>
                </div>
                
                <!-- Operating Hours -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3" style="color: #333;">Operating Hours</h5>
                    <p class="mb-2" style="color: #666;">
                        <strong>Monday – Friday:</strong> 9:00 AM - 8:00 PM
                    </p>
                    <p class="mb-2" style="color: #666;">
                        <strong>Saturday:</strong> 11:00 AM - 3:00 PM
                    </p>
                    <p class="mb-0" style="color: #666;">
                        <strong>Sunday:</strong> Closed
                    </p>
                </div>
                
                <!-- Email -->
                <div class="mb-4">
                    <a href="mailto:support@uef.edu.vn" class="btn btn-light border rounded-pill px-4 py-2 d-inline-flex align-items-center" style="background-color: #f5f5f5; color: #333; text-decoration: none;">
                        <i class="bi bi-envelope me-2"></i>
                        <span>support@uef.edu.vn</span>
                    </a>
                </div>
                
                <!-- Address -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-2" style="color: #333;">Address</h5>
                    <p class="mb-0" style="color: #666; line-height: 1.6;">
                        145 Điện Biên Phủ, Phường 2<br>
                        Bình Thạnh, Thành phố Hồ Chí Minh 00700<br>
                        Việt Nam<br>
                        <small class="text-muted">Plus Code: QPW3+XF Bình Thạnh</small>
                    </p>
                </div>
                
                <!-- Social Media Icons -->
                <div class="mt-4">
                    <h5 class="fw-bold mb-3" style="color: #333;">Follow Us</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="social-icon text-secondary text-decoration-none fs-4">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-icon text-secondary text-decoration-none fs-4">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-icon text-secondary text-decoration-none fs-4">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <a href="#" class="social-icon text-secondary text-decoration-none fs-4">
                            <i class="bi bi-pinterest"></i>
                        </a>
                        <a href="#" class="social-icon text-secondary text-decoration-none fs-4">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- RIGHT SIDE - GOOGLE MAP -->
        <div class="col-lg-7 d-flex align-items-center justify-content-center p-5" style="min-height: 100vh;">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.7951168399991!2d106.70243909919735!3d10.797486099999997!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f315d625c89%3A0x73084dd08a9fe5a4!2zxJDhuqFpIEjhu41jIEtpbmggVOG6vyBUw6BpIENow61uaCBUUC5IQ00gKFVFRikgQ1MgMTQx!5e0!3m2!1svi!2s!4v1766242139388!5m2!1svi!2s"
                width="100%"
                height="100%"
                style="border:0; max-height: 550px; height: 65vh; width: 90%; border-radius: 8px;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>

<style>
    /* Social icon hover effect - chỉ giữ animation */
    .social-icon:hover {
        color: #3b82f6 !important;
        transform: translateY(-3px);
    }
</style>
