@model Wed_Toys_Store.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: var(--admin-sidebar-bg);
            color: white;
            padding: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background-color: var(--admin-sidebar-header);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .admin-sidebar .sidebar-header h4 {
            margin: 0;
            color: white;
        }

        .admin-sidebar .menu-section {
            padding: 15px 0;
        }

        .admin-sidebar .menu-section-title {
            padding: 10px 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
        }

        .admin-sidebar .menu-item {
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }

        .admin-sidebar .menu-item:hover {
            background-color: var(--admin-sidebar-hover);
            color: white;
            border-left-color: var(--admin-sidebar-active);
        }

        .admin-sidebar .menu-item.active {
            background-color: var(--admin-sidebar-active);
            color: white;
            border-left-color: white;
        }

        .admin-sidebar .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .admin-sidebar .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            background-color: var(--admin-sidebar-header);
        }

        .admin-sidebar .sidebar-footer .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .admin-sidebar .sidebar-footer .btn:last-child {
            margin-bottom: 0;
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .admin-content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <div class="admin-content">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-receipt me-2"></i>Order Details #@Model.Id
                </h2>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Orders
                </a>
            </div>

            <div class="row g-4">
                <!-- Order Information -->
                <div class="col-md-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Order Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Order ID:</dt>
                                <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

                                <dt class="col-sm-4">Customer:</dt>
                                <dd class="col-sm-8">
                                    <div class="fw-semibold">@(Model.User?.Email ?? "N/A")</div>
                                    @if (Model.User != null)
                                    {
                                        <small class="text-muted">User ID: @Model.UserId</small>
                                    }
                                </dd>

                                <dt class="col-sm-4">Order Date:</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Pending" => "bg-warning",
                                            "Processing" => "bg-info",
                                            "Shipped" => "bg-primary",
                                            "Completed" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass fs-6">@Model.Status</span>
                                </dd>

                                <dt class="col-sm-4">Shipping Address:</dt>
                                <dd class="col-sm-8">@Model.ShippingAddress</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8">
                                    <strong class="text-primary fs-5">@Model.OrderItems.Sum(item => item.Quantity * item.Price).ToString("N0")₫</strong>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Order Items</h5>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                                    {
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="fw-semibold">@(item.Product?.Name ?? "N/A")</div>
                                                    @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ImageUrl))
                                                    {
                                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-thumbnail mt-2" style="width: 60px; height: 60px; object-fit: cover;">
                                                    }
                                                </td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Price.ToString("N0")₫</td>
                                                <td class="text-end">
                                                    <strong>@((item.Quantity * item.Price).ToString("N0"))₫</strong>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-4 text-muted">
                                                No items found
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th class="text-end text-primary">@Model.OrderItems.Sum(item => item.Quantity * item.Price).ToString("N0")₫</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Status Update -->
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Update Status</h5>
                        </div>
                        <div class="card-body">
                            @{
                                var isFinalized = Model.Status == "Cancelled" || Model.Status == "Completed";
                            }
                            
                            @if (isFinalized)
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    This order is @Model.Status.ToLower() and cannot be modified.
                                </div>
                                <div class="mb-3">
                                    <label for="statusSelect" class="form-label">Order Status</label>
                                    <select class="form-select" id="statusSelect" disabled>
                                        <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                        <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                                        <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
                                        <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                                        <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                                    </select>
                                </div>
                                <button type="button" class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-lock me-2"></i>Status Locked
                                </button>
                            }
                            else
                            {
                                <form method="post" action="@Url.Action("UpdateOrderStatus", "Admin")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    
                                    <div class="mb-3">
                                        <label for="statusSelect" class="form-label">Order Status</label>
                                        <select class="form-select" id="statusSelect" name="status" required>
                                            <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                            <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                                            <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
                                            <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                                            <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                                        </select>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary w-100 mb-2">
                                        <i class="bi bi-check-circle me-2"></i>Update Status
                                    </button>
                                </form>
                                
                                <div class="d-grid gap-2">
                                    <form method="post" action="@Url.Action("CompleteOrder", "Admin")">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to mark this order as completed?');">
                                            <i class="bi bi-check-circle me-2"></i>Complete Order
                                        </button>
                                    </form>
                                    
                                    <form method="post" action="@Url.Action("CancelOrder", "Admin")">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to cancel this order?');">
                                            <i class="bi bi-x-lg me-2"></i>Cancel Order
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

