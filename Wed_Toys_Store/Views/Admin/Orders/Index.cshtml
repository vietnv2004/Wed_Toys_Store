@model Wed_Toys_Store.Models.OrdersViewModel

@{
    ViewData["Title"] = "Orders Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: var(--admin-sidebar-bg);
            color: white;
            padding: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background-color: var(--admin-sidebar-header);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .admin-sidebar .sidebar-header h4 {
            margin: 0;
            color: white;
        }

        .admin-sidebar .menu-section {
            padding: 15px 0;
        }

        .admin-sidebar .menu-section-title {
            padding: 10px 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
        }

        .admin-sidebar .menu-item {
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }

        .admin-sidebar .menu-item:hover {
            background-color: var(--admin-sidebar-hover);
            color: white;
            border-left-color: var(--admin-sidebar-active);
        }

        .admin-sidebar .menu-item.active {
            background-color: var(--admin-sidebar-active);
            color: white;
            border-left-color: white;
        }

        .admin-sidebar .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .admin-sidebar .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            background-color: var(--admin-sidebar-header);
        }

        .admin-sidebar .sidebar-footer .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .admin-sidebar .sidebar-footer .btn:last-child {
            margin-bottom: 0;
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .admin-content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <div class="admin-content">
            <!-- Title -->
            <div class="mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-cart-check me-2"></i>Orders Management
                </h2>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="get" action="@Url.Action("Orders", "Admin")" id="searchForm">
                        <input type="hidden" name="page" value="1" id="pageInput">
                        <input type="hidden" name="pageSize" value="@Model.PageSize" id="pageSizeInput">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-2">
                                <label class="form-label small text-muted">Filter</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control border-start-0" 
                                           name="searchKeyword" 
                                           id="searchKeyword"
                                           placeholder="Enter order ID or customer name" 
                                           value="@Model.SearchKeyword"
                                           style="border-left: 0;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label for="statusFilter" class="form-label small text-muted">Status</label>
                                <select class="form-select" id="statusFilter" name="status">
                                    <option value="">All Statuses</option>
                                    <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                    <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                                    <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
                                    <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                                    <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="pageSizeSelect" class="form-label small text-muted">Items per page</label>
                                <select class="form-select" id="pageSizeSelect" name="pageSize" aria-label="Select number of items per page" onchange="changePageSize(this.value)">
                                    <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                    <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                    <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                    <option value="100" selected="@(Model.PageSize == 100)">100</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label small text-muted">Date From</label>
                                <input type="date" 
                                       class="form-control" 
                                       name="dateFrom" 
                                       id="dateFrom"
                                       value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label small text-muted">Date To</label>
                                <input type="date" 
                                       class="form-control" 
                                       name="dateTo" 
                                       id="dateTo"
                                       value="@(Model.DateTo?.ToString("yyyy-MM-dd"))">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label small text-muted d-block">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search me-1"></i>Filter
                                    </button>
                                    <a href="@Url.Action("Orders", "Admin", new { pageSize = Model.PageSize })" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Clear
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Orders Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Order Date</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Shipping Address</th>
                                <th class="w-auto">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Orders != null && Model.Orders.Any())
                            {
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td><strong>#@order.Id</strong></td>
                                        <td>
                                            <div class="fw-semibold">@(order.User?.Email ?? "N/A")</div>
                                            @if (order.User != null)
                                            {
                                                <small class="text-muted">@order.UserId</small>
                                            }
                                        </td>
                                        <td>
                                            <small>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            <strong class="text-primary">@order.OrderItems.Sum(item => item.Quantity * item.Price).ToString("N0")â‚«</strong>
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = order.Status switch
                                                {
                                                    "Pending" => "bg-warning",
                                                    "Processing" => "bg-info",
                                                    "Shipped" => "bg-primary",
                                                    "Completed" => "bg-success",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusClass">@order.Status</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@(order.ShippingAddress.Length > 30 ? order.ShippingAddress.Substring(0, 30) + "..." : order.ShippingAddress)</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })" class="btn btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @{
                                                    var isFinalized = order.Status == "Cancelled" || order.Status == "Completed";
                                                }
                                                @if (!isFinalized)
                                                {
                                                    @* Confirm button - only shown when status = Pending *@
                                                    @if (order.Status == "Pending")
                                                    {
                                                        <button type="button" class="btn btn-outline-info" onclick="confirmOrder(@order.Id)" title="Confirm Order">
                                                            <i class="bi bi-check-circle me-1"></i>Confirm
                                                        </button>
                                                    }
                                                    
                                                    @* Ship button - only shown when status = Processing *@
                                                    @if (order.Status == "Processing")
                                                    {
                                                        <button type="button" class="btn btn-outline-primary" onclick="shipOrder(@order.Id)" title="Ship Order">
                                                            <i class="bi bi-truck me-1"></i>Ship
                                                        </button>
                                                    }
                                                    
                                                    @* Complete button - only shown when status = Shipped *@
                                                    @if (order.Status == "Shipped")
                                                    {
                                                        <button type="button" class="btn btn-outline-success" onclick="completeOrder(@order.Id)" title="Complete Order">
                                                            <i class="bi bi-check-circle-fill me-1"></i>Complete
                                                        </button>
                                                    }
                                                    
                                                    @* Cancel button - shown for all non-finalized statuses *@
                                                    <button type="button" class="btn btn-outline-danger" onclick="cancelOrder(@order.Id)" title="Cancel Order">
                                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                        No orders found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            @if (Model != null && Model.Orders != null && Model.Orders.Any() && Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" 
                               href="@(Model.HasPreviousPage ? Url.Action("Orders", "Admin", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo }) : "#")"
                               aria-label="Previous"
                               @(Model.HasPreviousPage ? "" : "aria-disabled=\"true\" tabindex=\"-1\"")>
                                <span aria-hidden="true">Previous</span>
                            </a>
                        </li>
                        @{
                            int startPage = Math.Max(1, Model.CurrentPage - 2);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            
                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Orders", "Admin", new { page = 1, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo })" aria-label="Go to page 1">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                            }
                            
                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    @if (i == Model.CurrentPage)
                                    {
                                        <a class="page-link" 
                                           href="@Url.Action("Orders", "Admin", new { page = i, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo })"
                                           aria-label="Go to page @i"
                                           aria-current="page">@i</a>
                                    }
                                    else
                                    {
                                        <a class="page-link" 
                                           href="@Url.Action("Orders", "Admin", new { page = i, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo })"
                                           aria-label="Go to page @i">@i</a>
                                    }
                                </li>
                            }
                            
                            if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Orders", "Admin", new { page = Model.TotalPages, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo })" aria-label="Go to page @Model.TotalPages">@Model.TotalPages</a>
                                </li>
                            }
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" 
                               href="@(Model.HasNextPage ? Url.Action("Orders", "Admin", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, status = Model.Status, searchKeyword = Model.SearchKeyword, dateFrom = Model.DateFrom, dateTo = Model.DateTo }) : "#")" 
                               aria-label="Next"
                               @(Model.HasNextPage ? "" : "aria-disabled=\"true\" tabindex=\"-1\"")>
                                <span aria-hidden="true">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>

    <!-- Hidden form for AntiForgeryToken -->
    <form id="antiForgeryForm" class="d-none">
        @Html.AntiForgeryToken()
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function changePageSize(pageSize) {
            const form = document.getElementById('searchForm');
            document.getElementById('pageSizeInput').value = pageSize;
            document.getElementById('pageInput').value = 1;
            form.submit();
        }

        function confirmOrder(orderId) {
            if (confirm('Are you sure you want to confirm this order?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UpdateOrderStatus", "Admin")';
                
                const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = orderId;
                form.appendChild(idInput);
                
                const statusInput = document.createElement('input');
                statusInput.type = 'hidden';
                statusInput.name = 'status';
                statusInput.value = 'Processing';
                form.appendChild(statusInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function shipOrder(orderId) {
            if (confirm('Are you sure you want to ship this order?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UpdateOrderStatus", "Admin")';
                
                const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = orderId;
                form.appendChild(idInput);
                
                const statusInput = document.createElement('input');
                statusInput.type = 'hidden';
                statusInput.name = 'status';
                statusInput.value = 'Shipped';
                form.appendChild(statusInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function completeOrder(orderId) {
            if (confirm('Are you sure you want to complete this order?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("CompleteOrder", "Admin")';
                
                const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = orderId;
                form.appendChild(idInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function cancelOrder(orderId) {
            if (confirm('Are you sure you want to cancel this order?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("CancelOrder", "Admin")';
                
                const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = orderId;
                form.appendChild(idInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>

