@model Wed_Toys_Store.Models.ProductsViewModel

@{
    ViewData["Title"] = "Products Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: var(--admin-sidebar-bg);
            color: white;
            padding: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background-color: var(--admin-sidebar-header);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .admin-sidebar .sidebar-header h4 {
            margin: 0;
            color: white;
        }

        .admin-sidebar .menu-section {
            padding: 15px 0;
        }

        .admin-sidebar .menu-section-title {
            padding: 10px 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
        }

        /* Bootstrap nav-link và menu-item styles */
        .admin-sidebar .nav-link.menu-item,
        .admin-sidebar .menu-item {
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8) !important;
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 3px solid transparent;
            cursor: pointer;
        }

        .admin-sidebar .nav-link.menu-item:hover,
        .admin-sidebar .menu-item:hover {
            background-color: var(--admin-sidebar-hover);
            color: white !important;
            border-left-color: var(--admin-sidebar-active);
        }

        .admin-sidebar .nav-link.menu-item.active,
        .admin-sidebar .menu-item.active {
            background-color: var(--admin-sidebar-active);
            color: white !important;
            border-left-color: white;
            font-weight: 600;
        }

        .admin-sidebar .nav-link.menu-item.disabled,
        .admin-sidebar .menu-item.disabled {
            color: rgba(255, 255, 255, 0.4) !important;
            cursor: not-allowed;
            pointer-events: none;
        }

        .admin-sidebar .nav-link.menu-item.disabled:hover,
        .admin-sidebar .menu-item.disabled:hover {
            background-color: transparent;
            border-left-color: transparent;
        }

        .admin-sidebar .nav-link.menu-item i,
        .admin-sidebar .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .admin-sidebar .submenu {
            background-color: rgba(0, 0, 0, 0.15);
            padding-left: 20px;
        }

        .admin-sidebar .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            background-color: var(--admin-sidebar-header);
        }

        .admin-sidebar .sidebar-footer .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .admin-sidebar .sidebar-footer .btn:last-child {
            margin-bottom: 0;
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .admin-content {
            padding: 2rem;
        }

        .breadcrumb {
            background: none;
            padding: 0;
            margin: 0;
        }

        .breadcrumb-item a {
            color: #4169E1;
            text-decoration: none;
        }

        .product-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <!-- Content -->
        <div class="admin-content">
            <!-- Title and Add Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-list-ul me-2"></i>Product List
                </h2>
                <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Product
                </a>
            </div>

            <!-- Search and Filter Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                <form method="get" action="@Url.Action("Products", "Admin")" id="searchForm">
                    <input type="hidden" name="page" value="1" id="pageInput">
                    <input type="hidden" name="pageSize" value="@Model.PageSize" id="pageSizeInput">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-2">
                            <label class="form-label small text-muted">Filter</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text" 
                                       class="form-control border-start-0" 
                                       name="searchKeyword" 
                                       id="searchKeyword"
                                       placeholder="Enter search keyword" 
                                       value="@Model.SearchKeyword"
                                       style="border-left: 0;">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label for="pageSizeSelect" class="form-label small text-muted">Items per page</label>
                            <select class="form-select" id="pageSizeSelect" name="pageSize" aria-label="Select number of items per page" onchange="changePageSize(this.value)">
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small text-muted">Category</label>
                            <select class="form-select" name="categoryId" id="categoryFilter">
                                <option value="">-- Select --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small text-muted">Status</label>
                            <select class="form-select" name="status" id="statusFilter">
                                <option value="">-- Select --</option>
                                <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                                <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small text-muted d-block">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i>Filter
                                </button>
                                <a href="@Url.Action("Products", "Admin", new { pageSize = Model.PageSize })" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
            </div>

            <!-- Bulk Actions -->
            <div class="card shadow-sm mb-3" id="bulkActionsCard" style="display: none;">
                <div class="card-body py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <span class="text-muted small" id="selectedCount">0 products selected</span>
                        </div>
                        <div>
                            <button type="button" class="btn btn-danger btn-sm" id="deleteSelectedBtn" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                                <i class="bi bi-trash me-2"></i>Delete Selected
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Products Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="w-auto">
                                <input type="checkbox" class="form-check-input" id="selectAllCheckbox">
                            </th>
                            <th>ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Created Date</th>
                            <th>Image Url</th>
                            <th>Status</th>
                            <th class="w-auto">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Products != null && Model.Products.Any())
                        {
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input product-checkbox" value="@product.Id" data-product-id="@product.Id" data-product-name="@product.Name">
                                    </td>
                                    <td><strong>@product.Id</strong></td>
                                    <td>
                                        <div class="fw-semibold">@product.Name</div>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <small class="text-muted">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(product.Category?.Name ?? "N/A")</span>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@product.Price.ToString("N0")₫</strong>
                                    </td>
                                    <td>
                                        <small>@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" class="product-image">
                                        }
                                        else
                                        {
                                            <div class="product-image bg-light rounded d-flex align-items-center justify-content-center">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (product.Stock > 0)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Edit", "Admin", new { id = product.Id })" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Admin", new { id = product.Id })" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    No products found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>

            <!-- Pagination -->
            @if (Model != null && Model.Products != null && Model.Products.Any() && Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" 
                               href="@(Model.HasPreviousPage ? Url.Action("Products", "Admin", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status }) : "#")" 
                               aria-label="Previous"
                               @(Model.HasPreviousPage ? "" : "aria-disabled=\"true\" tabindex=\"-1\"")>
                                <span aria-hidden="true">Previous</span>
                            </a>
                        </li>
                        @{
                            int startPage = Math.Max(1, Model.CurrentPage - 2);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            
                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Products", "Admin", new { page = 1, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status })" aria-label="Go to page 1">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                            }
                            
                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    @if (i == Model.CurrentPage)
                                    {
                                        <a class="page-link" 
                                           href="@Url.Action("Products", "Admin", new { page = i, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status })"
                                           aria-label="Go to page @i"
                                           aria-current="page">@i</a>
                                    }
                                    else
                                    {
                                        <a class="page-link" 
                                           href="@Url.Action("Products", "Admin", new { page = i, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status })"
                                           aria-label="Go to page @i">@i</a>
                                    }
                                </li>
                            }
                            
                            if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Products", "Admin", new { page = Model.TotalPages, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status })" aria-label="Go to page @Model.TotalPages">@Model.TotalPages</a>
                                </li>
                            }
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" 
                               href="@(Model.HasNextPage ? Url.Action("Products", "Admin", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, categoryId = Model.CategoryId, status = Model.Status }) : "#")" 
                               aria-label="Next"
                               @(Model.HasNextPage ? "" : "aria-disabled=\"true\" tabindex=\"-1\"")>
                                <span aria-hidden="true">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
            
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">
                        <i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the selected products? This action cannot be undone.</p>
                    <div id="selectedProductsList" class="mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteSelectedForm" method="post" action="@Url.Action("DeleteSelected", "Admin")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productIds" id="selectedProductIds" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Selected
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function changePageSize(pageSize) {
            // Navigate to page 1 with new pageSize, preserve search and filter
            const form = document.getElementById('searchForm');
            document.getElementById('pageSizeInput').value = pageSize;
            document.getElementById('pageInput').value = 1;
            form.submit();
        }

        // Select All functionality
        document.getElementById('selectAllCheckbox').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.product-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateBulkActions();
        });

        // Individual checkbox change
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('product-checkbox')) {
                updateSelectAllState();
                updateBulkActions();
            }
        });

        function updateSelectAllState() {
            const checkboxes = document.querySelectorAll('.product-checkbox');
            const checkedCount = document.querySelectorAll('.product-checkbox:checked').length;
            const selectAll = document.getElementById('selectAllCheckbox');
            
            if (checkedCount === 0) {
                selectAll.indeterminate = false;
                selectAll.checked = false;
            } else if (checkedCount === checkboxes.length) {
                selectAll.indeterminate = false;
                selectAll.checked = true;
            } else {
                selectAll.indeterminate = true;
            }
        }

        function updateBulkActions() {
            const checkedBoxes = document.querySelectorAll('.product-checkbox:checked');
            const count = checkedBoxes.length;
            const bulkActionsCard = document.getElementById('bulkActionsCard');
            const selectedCount = document.getElementById('selectedCount');
            const deleteBtn = document.getElementById('deleteSelectedBtn');

            if (count > 0) {
                bulkActionsCard.style.display = 'block';
                selectedCount.textContent = count + (count === 1 ? ' product selected' : ' products selected');
                deleteBtn.disabled = false;
            } else {
                bulkActionsCard.style.display = 'none';
                deleteBtn.disabled = true;
            }
        }

        // Update modal content when delete button is clicked
        document.getElementById('deleteSelectedBtn').addEventListener('click', function() {
            const checkedBoxes = document.querySelectorAll('.product-checkbox:checked');
            const productIds = [];
            const productNames = [];
            const selectedProductsList = document.getElementById('selectedProductsList');
            const selectedProductIdsInput = document.getElementById('selectedProductIds');

            checkedBoxes.forEach(checkbox => {
                productIds.push(checkbox.value);
                productNames.push(checkbox.dataset.productName);
            });

            selectedProductIdsInput.value = productIds.join(',');

            // Display selected products in modal
            if (productNames.length > 0) {
                let listHtml = '<strong>Selected products:</strong><ul class="list-group list-group-flush mt-2">';
                productNames.forEach(name => {
                    listHtml += '<li class="list-group-item small">' + name + '</li>';
                });
                listHtml += '</ul>';
                selectedProductsList.innerHTML = listHtml;
            } else {
                selectedProductsList.innerHTML = '';
            }
        });
    </script>
</body>
</html>

