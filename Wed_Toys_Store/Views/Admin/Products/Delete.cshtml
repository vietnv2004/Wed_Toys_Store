@model Wed_Toys_Store.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: var(--admin-sidebar-bg);
            color: white;
            padding: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background-color: var(--admin-sidebar-header);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .admin-sidebar .sidebar-header h4 {
            margin: 0;
            color: white;
        }

        .admin-sidebar .menu-section {
            padding: 15px 0;
        }

        .admin-sidebar .menu-section-title {
            padding: 10px 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
        }

        /* Bootstrap nav-link và menu-item styles */
        .admin-sidebar .nav-link.menu-item,
        .admin-sidebar .menu-item {
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8) !important;
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 3px solid transparent;
            cursor: pointer;
        }

        .admin-sidebar .nav-link.menu-item:hover,
        .admin-sidebar .menu-item:hover {
            background-color: var(--admin-sidebar-hover);
            color: white !important;
            border-left-color: var(--admin-sidebar-active);
        }

        .admin-sidebar .nav-link.menu-item.active,
        .admin-sidebar .menu-item.active {
            background-color: var(--admin-sidebar-active);
            color: white !important;
            border-left-color: white;
            font-weight: 600;
        }

        .admin-sidebar .nav-link.menu-item.disabled,
        .admin-sidebar .menu-item.disabled {
            color: rgba(255, 255, 255, 0.4) !important;
            cursor: not-allowed;
            pointer-events: none;
        }

        .admin-sidebar .nav-link.menu-item.disabled:hover,
        .admin-sidebar .menu-item.disabled:hover {
            background-color: transparent;
            border-left-color: transparent;
        }

        .admin-sidebar .nav-link.menu-item i,
        .admin-sidebar .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .admin-sidebar .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            background-color: var(--admin-sidebar-header);
        }

        .admin-sidebar .sidebar-footer .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .admin-sidebar .sidebar-footer .btn:last-child {
            margin-bottom: 0;
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .admin-content {
            padding: 2rem;
        }

        .product-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <div class="admin-content">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Delete Product
                </h2>
                <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <!-- Warning Card -->
            <div class="card shadow-sm border-danger mb-4">
                <div class="card-body">
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Details Card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <!-- Product Image -->
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image img-fluid" />
                            }
                            else
                            {
                                <div class="product-image bg-light rounded d-flex align-items-center justify-content-center mx-auto">
                                    <i class="bi bi-image text-muted display-1"></i>
                                </div>
                            }
                        </div>

                        <!-- Product Information -->
                        <div class="col-md-8">
                            <h4 class="mb-3">@Model.Name</h4>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Product ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@(Model.Category?.Name ?? "N/A")</span>
                                </dd>

                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">
                                    <strong class="text-primary">@Model.Price.ToString("N0")₫</strong>
                                </dd>

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">@Model.Stock</dd>

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4">Description:</dt>
                                    <dd class="col-sm-8">@Model.Description</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.Brand))
                                {
                                    <dt class="col-sm-4">Brand:</dt>
                                    <dd class="col-sm-8">@Model.Brand</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.AgeRange))
                                {
                                    <dt class="col-sm-4">Age Range:</dt>
                                    <dd class="col-sm-8">@Model.AgeRange</dd>
                                }

                                <dt class="col-sm-4">Created Date:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

