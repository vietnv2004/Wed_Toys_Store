@model Wed_Toys_Store.Models.ApplicationUser
@using System.Linq

@{
    ViewData["Title"] = "User Details";
    Layout = null;
    var roles = ViewBag.UserRoles as IList<string> ?? new List<string>();
    var orders = ViewBag.UserOrders as List<Wed_Toys_Store.Models.Order> ?? new List<Wed_Toys_Store.Models.Order>();
    var displayName = !string.IsNullOrEmpty(Model.FullName) ? Model.FullName : 
        (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName) 
            ? $"{Model.FirstName} {Model.LastName}".Trim() 
            : Model.UserName ?? "N/A");
    var initials = !string.IsNullOrEmpty(displayName) && displayName != "N/A" 
        ? string.Join("", displayName.Split(' ').Take(2).Select(n => n[0].ToString().ToUpper()))
        : "U";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        :root {
            --admin-sidebar-bg: #4169E1;
            --admin-sidebar-hover: #3556C7;
            --admin-sidebar-active: #2E4FC0;
            --admin-sidebar-header: #2E4FC0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: var(--admin-sidebar-bg);
            color: white;
            padding: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .admin-sidebar .sidebar-header {
            padding: 20px;
            background-color: var(--admin-sidebar-header);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .admin-sidebar .sidebar-header h4 {
            margin: 0;
            color: white;
        }

        .admin-sidebar .menu-section {
            padding: 15px 0;
        }

        .admin-sidebar .menu-section-title {
            padding: 10px 20px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
        }

        .admin-sidebar .menu-item {
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }

        .admin-sidebar .menu-item:hover {
            background-color: var(--admin-sidebar-hover);
            color: white;
            border-left-color: var(--admin-sidebar-active);
        }

        .admin-sidebar .menu-item.active {
            background-color: var(--admin-sidebar-active);
            color: white;
            border-left-color: white;
        }

        .admin-sidebar .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .admin-sidebar .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            background-color: var(--admin-sidebar-header);
        }

        .admin-sidebar .sidebar-footer .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .admin-sidebar .sidebar-footer .btn:last-child {
            margin-bottom: 0;
        }

        .admin-main {
            margin-left: 250px;
            min-height: 100vh;
        }

        .admin-content {
            padding: 2rem;
        }

        .user-avatar-large {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 48px;
            margin: 0 auto;
        }

        .info-item {
            padding: 0.75rem 0;
            border-bottom: 1px solid #e9ecef;
        }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            color: #212529;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="admin-main">
        <div class="admin-content">
            <!-- Header -->
            <div class="mb-4">
                <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-secondary mb-3">
                    <i class="bi bi-arrow-left me-2"></i>Back to Users
                </a>
                <h2 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i>User Details
                </h2>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <!-- User Information -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <div class="user-avatar-large mb-3">
                                @initials
                            </div>
                            <h4 class="mb-1">@displayName</h4>
                            <p class="text-muted mb-3">@Model.UserName</p>
                            
                            @if (roles.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-secondary">User</span>
                            }
                        </div>
                    </div>

                    <!-- Account Actions -->
                    <div class="card shadow-sm mt-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Actions</h5>
                        </div>
                        <div class="card-body">
                            @{
                                var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                var isCurrentUser = Model.Id == currentUserId;
                                var isLocked = Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.UtcNow;
                                var currentRole = roles.Any() ? roles.First() : "User";
                            }
                            
                            <!-- Change Role -->
                            @if (!isCurrentUser)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Change Role</label>
                                    <form method="post" action="@Url.Action("ChangeUserRole", "Admin")" id="changeRoleFormDetails">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <select class="form-select" name="role" onchange="changeRoleDetails('@Model.Id', this.value)">
                                            @if (currentRole == "User")
                                            {
                                                <option value="User" selected>User</option>
                                            }
                                            else
                                            {
                                                <option value="User">User</option>
                                            }
                                            @if (currentRole == "Admin")
                                            {
                                                <option value="Admin" selected>Admin</option>
                                            }
                                            else
                                            {
                                                <option value="Admin">Admin</option>
                                            }
                                        </select>
                                    </form>
                                </div>
                            }
                            
                            <!-- Lock/Unlock Account -->
                            @if (!isCurrentUser)
                            {
                                @if (isLocked)
                                {
                                    <form method="post" action="@Url.Action("UnlockUser", "Admin")" onsubmit="return confirm('Are you sure you want to unlock this account?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-warning w-100">
                                            <i class="bi bi-unlock me-2"></i>Unlock Account
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" action="@Url.Action("LockUser", "Admin")" onsubmit="return confirm('Are you sure you want to lock this account? The user will not be able to login.');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-lock me-2"></i>Lock Account
                                        </button>
                                    </form>
                                }
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-lock me-2"></i>Cannot modify your own account
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- User Details -->
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>User Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="info-item">
                                <div class="info-label">Full Name</div>
                                <div class="info-value">@displayName</div>
                            </div>
                            
                            <div class="info-item">
                                <div class="info-label">Email</div>
                                <div class="info-value">
                                    @Model.Email
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-check-circle"></i> Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">
                                            <i class="bi bi-exclamation-triangle"></i> Not Verified
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-label">Username</div>
                                <div class="info-value">@Model.UserName</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <div class="info-item">
                                    <div class="info-label">Phone Number</div>
                                    <div class="info-value">
                                        @Model.PhoneNumber
                                        @if (Model.PhoneNumberConfirmed)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="bi bi-check-circle"></i> Verified
                                            </span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <div class="info-item">
                                    <div class="info-label">Address</div>
                                    <div class="info-value">@Model.Address</div>
                                </div>
                            }

                            @if (Model.ChildBirthday.HasValue)
                            {
                                <div class="info-item">
                                    <div class="info-label">Child Birthday</div>
                                    <div class="info-value">@Model.ChildBirthday.Value.ToString("MM/dd/yyyy")</div>
                                </div>
                            }

                            <div class="info-item">
                                <div class="info-label">Account Created</div>
                                <div class="info-value">
                                    @Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                                    <small class="text-muted">(@Model.CreatedAt.ToString("UTC"))</small>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-label">Account Status</div>
                                <div class="info-value">
                                    @{
                                        var lockStatus = Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.UtcNow;
                                    }
                                    @if (lockStatus)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-lock"></i> Locked
                                        </span>
                                        @if (Model.LockoutEnd.HasValue)
                                        {
                                            <small class="text-muted ms-2">Until @Model.LockoutEnd.Value.ToString("MM/dd/yyyy HH:mm")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-unlock"></i> Active
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Orders -->
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-cart-check me-2"></i>Recent Orders
                                <span class="badge bg-primary">@orders.Count</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (orders.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Order ID</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Total</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in orders)
                                            {
                                                <tr>
                                                    <td>#@order.Id</td>
                                                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                                    <td>
                                                        <span class="badge bg-@(order.Status == "Completed" ? "success" : order.Status == "Cancelled" ? "danger" : "warning")">
                                                            @order.Status
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <strong>@order.OrderItems.Sum(item => item.Quantity * item.Price).ToString("N0")â‚«</strong>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("Orders", "Admin", new { userId = Model.Id })" class="btn btn-outline-primary">
                                        View All Orders
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center mb-0">No orders found</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function changeRoleDetails(userId, role) {
            var roleName = role === 'Admin' ? 'Administrator' : 'User';
            if (confirm('Are you sure you want to change this user\'s role to "' + roleName + '"?')) {
                document.getElementById('changeRoleFormDetails').submit();
            } else {
                // Reset select to previous value
                location.reload();
            }
        }
    </script>
</body>
</html>

