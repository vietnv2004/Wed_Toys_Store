@model Wed_Toys_Store.Models.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        /* Admin Sidebar Variables */
        :root {
            --admin-sidebar-width: 250px;
            --admin-primary: #4169E1;
            --admin-primary-hover: #3556C7;
        }

        body {
            background-color: #f8f9fa; /* Bootstrap Gray-100 */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Sidebar Styling */
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: var(--admin-sidebar-width);
            background-color: var(--admin-primary);
            color: white;
            z-index: 1000;
            overflow-y: auto;
        }

        /* Main Content Wrapper */
        .admin-main {
            margin-left: var(--admin-sidebar-width);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .admin-content {
            padding: 2rem;
            flex: 1;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_AdminSidebar")

    <div class="admin-main">
        <div class="admin-content container-fluid">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0 text-primary">
                    <i class="bi bi-info-circle-fill me-2"></i>Category Details
                </h2>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <a href="@Url.Action("Edit", "Categories", new { id = Model.Id })" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0">Information: <span class="fw-bold text-dark">@Model.Name</span></h5>
                </div>

                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">Category ID</dt>
                        <dd class="col-sm-9 fw-bold">@Model.Id</dd>

                        <dt class="col-sm-3 text-muted">Category Name</dt>
                        <dd class="col-sm-9 fs-5 text-dark">@Model.Name</dd>

                        <dt class="col-sm-3 text-muted">Description</dt>
                        <dd class="col-sm-9">
                            @if (string.IsNullOrEmpty(Model.Description))
                            {
                                <span class="text-muted fst-italic">No description provided</span>
                            }
                            else
                            {
                                @Model.Description
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted">Total Products</dt>
                        <dd class="col-sm-9">
                            <span class="badge rounded-pill bg-primary px-3">
                                <i class="bi bi-box-seam me-1"></i>
                                @(Model.Products?.Count ?? 0) products
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>