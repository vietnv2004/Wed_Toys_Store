@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-3">About ToysStore</h1>
                <p class="lead">Your trusted partner for quality toys and children's products</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <!-- Our Story Section -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="fw-bold mb-4" style="color: var(--brand-blue);">Our Story</h2>
            <p class="text-muted mb-3">
                ToysStore was founded with a simple mission: to bring joy and happiness to children and families through high-quality toys and educational products. Since our establishment, we have been committed to providing the best selection of toys, games, and children's products from trusted brands worldwide.
            </p>
            <p class="text-muted mb-3">
                We understand that every child is unique, and that's why we offer a diverse range of products suitable for different ages, interests, and developmental stages. From educational toys that stimulate learning to fun games that encourage creativity, we have something special for every child.
            </p>
            <p class="text-muted">
                Our team is passionate about helping parents and caregivers find the perfect products that will create lasting memories and support children's growth and development.
            </p>
        </div>
        <div class="col-lg-6">
            <div class="bg-light rounded-3 p-4 h-100 d-flex align-items-center justify-content-center">
                <div class="text-center">
                    <i class="bi bi-heart-fill text-danger" style="font-size: 5rem;"></i>
                    <h4 class="mt-3 fw-bold">Made with Love</h4>
                    <p class="text-muted">Every product is carefully selected with your child's happiness in mind</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Our Values Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="fw-bold mb-3" style="color: var(--brand-blue);">Our Values</h2>
            <p class="text-muted">The principles that guide everything we do</p>
        </div>
    </div>
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title fw-bold mt-3 mb-3">Quality First</h5>
                    <p class="card-text text-muted">
                        We only offer products that meet the highest safety and quality standards to ensure your child's well-being.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title fw-bold mt-3 mb-3">Customer Focus</h5>
                    <p class="card-text text-muted">
                        Your satisfaction is our priority. We're here to help you find the perfect products for your family.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-lightbulb text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title fw-bold mt-3 mb-3">Innovation</h5>
                    <p class="card-text text-muted">
                        We continuously explore new products and trends to bring you the latest and most exciting toys.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="row mt-5">
        <div class="col-12 mb-5">
            <div class="text-center">
                <h2 class="fw-bold mb-3" style="color: var(--brand-blue);">Contact Us</h2>
                <p class="text-muted lead">We are at your disposal 7 days a week!</p>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- LEFT SIDE - CONTACT INFORMATION -->
        <div class="col-lg-5">
            <div class="bg-light rounded-3 p-4 h-100">
                <h3 class="fw-bold mb-4" style="color: var(--brand-blue);">How can we help you?</h3>
                
                <!-- Phone Number -->
                <div class="mb-4">
                    <h4 class="fw-bold mb-2 text-primary">+84 28 2236 2222</h4>
                    <p class="text-muted small">Available 6:45 AM - 10:00 PM</p>
                </div>
                
                <!-- Operating Hours -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Operating Hours</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-semibold">Monday – Friday</span>
                        <span class="text-muted">9:00 AM - 8:00 PM</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-semibold">Saturday</span>
                        <span class="text-muted">11:00 AM - 3:00 PM</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-semibold">Sunday</span>
                        <span class="text-muted">Closed</span>
                    </div>
                </div>
                
                <!-- Email -->
                <div class="mb-4">
                    <a href="mailto:support@uef.edu.vn" class="btn btn-outline-primary rounded-pill px-4 py-2">
                        <i class="bi bi-envelope me-2"></i>support@uef.edu.vn
                    </a>
                </div>
                
                <!-- Address -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-2">Address</h5>
                    <p class="text-muted mb-0" style="line-height: 1.6;">
                        145 Điện Biên Phủ, Phường 2<br>
                        Bình Thạnh, Thành phố Hồ Chí Minh 00700<br>
                        Việt Nam<br>
                        <small class="text-muted">Plus Code: QPW3+XF Bình Thạnh</small>
                    </p>
                </div>
                
                <!-- Social Media Icons -->
                <div class="mt-4">
                    <h5 class="fw-bold mb-3">Follow Us</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-secondary text-decoration-none fs-4 social-icon">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="text-secondary text-decoration-none fs-4 social-icon">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="text-secondary text-decoration-none fs-4 social-icon">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <a href="#" class="text-secondary text-decoration-none fs-4 social-icon">
                            <i class="bi bi-pinterest"></i>
                        </a>
                        <a href="#" class="text-secondary text-decoration-none fs-4 social-icon">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- RIGHT SIDE - GOOGLE MAP -->
        <div class="col-lg-7">
            <div class="bg-light rounded-3 p-4 h-100 d-flex align-items-center justify-content-center">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.7951168399991!2d106.70243909919735!3d10.797486099999997!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f315d625c89%3A0x73084dd08a9fe5a4!2zxJDhuqFpIEjhu41jIEtpbmggVOG6vyBUw6BpIENow61uaCBUUC5IQ00gKFVFRikgQ1MgMTQx!5e0!3m2!1svi!2s!4v1766242139388!5m2!1svi!2s"
                    height="500"
                    class="rounded-3 w-100"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

<style>
    /* Social icon hover effect */
    .social-icon:hover {
        color: #4169E1 !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
</style>

